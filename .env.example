# Example .env file for local development
# Copy this to .env.local and add your actual values

# Thor Commerce webhook secret
# Get this from your Thor Commerce dashboard when setting up webhooks
THOR_WEBHOOK_SECRET=your_webhook_secret_here

# Thor Commerce API credentials
# Get these from your Thor Commerce dashboard
THOR_API_KEY=your_api_key_here
THOR_TENANT=your_tenant_id_here
THOR_API_URL=https://api.thorcommerce.io

# Email configuration (AWS SES v2)
# Get credentials from AWS IAM console
EMAIL_FROM=noreply@yourdomain.com
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Note: For production, use wrangler secrets:
# pnpm wrangler secret put THOR_WEBHOOK_SECRET
# pnpm wrangler secret put THOR_API_KEY
# pnpm wrangler secret put THOR_TENANT
# pnpm wrangler secret put AWS_REGION
# pnpm wrangler secret put AWS_ACCESS_KEY_ID
# pnpm wrangler secret put AWS_SECRET_ACCESS_KEY
# pnpm wrangler secret put EMAIL_FROM
